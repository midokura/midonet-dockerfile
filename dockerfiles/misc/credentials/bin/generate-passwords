#!/bin/sh

if [ ! -e /var/run/data/creds ]; then
    echo "ADMIN_TOKEN="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
    echo "MYSQL_ROOT="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
    echo "MYSQL_KEYSTONE="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
    echo "MYSQL_NOVA="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
    echo "SERVICE_NOVA="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
    echo "MYSQL_NEUTRON="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
    echo "SERVICE_NEUTRON="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
    echo "MYSQL_GLANCE="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
    echo "SERVICE_GLANCE="$(tr -cd A-Za-z0-9 < /dev/urandom | head -c 15) >> /var/run/data/creds
fi

tail -f /dev/null
